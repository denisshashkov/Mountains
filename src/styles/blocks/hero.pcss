.hero {
  @include tablets {
    padding-bottom: 300px;
  }

  @include small {
    justify-content: flex-start;
    height: 100%;
    padding: 0;
    margin-bottom: 100px;
  }

  height: 100vh;
  display: flex;
  flex: 1;
  padding-bottom: 200px;
  position: relative;
}

.hero-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}