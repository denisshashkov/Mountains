.values-section {
  min-height: 735px;
  position: relative;
}

.values {
  display: flex;
  &__title {
    color: #464d62;
font-family: "Open Sans";
font-size: 16px;
font-weight: 700;
line-height: 36px;
margin-bottom: 58px;
  }
  &__text {
    opacity: 0.5;
color: #464d62;
font-size: 16px;
font-weight: 400;
line-height: 30px;
max-width: 585px;
margin-bottom: 90px;
  }
  &__left{
  width: 640px;
  display: flex;
    justify-content: center;
    align-items: center;
  }
}