.skills {
  display: flex;
  
}
  
.skill {
  width: 140px;
  height: 140px;
  position: relative;
}  
  
  
  .skill__title {
    opacity: 0.5;
color: #464d62;
font-family: "Open Sans";
font-size: 18px;
font-weight: 700;
line-height: 48px;
text-transform: uppercase;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)
  }


  circle:last-child {
    transform: rotate(180deg);
    transform-origin: 50% 50%;
  }
