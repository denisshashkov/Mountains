.skills {
  display: flex;
  flex-direction: column;
 
}
  
.skill {
  width: 140px;
  height: 140px;
  position: relative;
}  
  
.user-skills__item{
  list-style: none;
  margin-bottom: 45px;
  &:last-child {
    margin-bottom: 0;
  }
}  

  .skill__title {
    opacity: 0.5;
color: #464d62;
font-family: "Open Sans";
font-size: 16px;
font-weight: 700;
text-transform: uppercase;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)
  }


  circle:last-child {
    transform: rotate(180deg);
    transform-origin: 50% 50%;
  }

  .skills-row__list {
    display: flex;
    justify-content: center;
  }

  .skills-row__title {
    padding-left: 120px;
    margin-bottom: 30px;
  }
