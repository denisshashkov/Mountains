.section-mountains {
  padding-bottom: 100px;
}

.mountains__content {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 280px;
  align-items: center;
  text-align: center;
}

.user-data {
  display: flex;
  flex-direction: column;
  align-items: center;

  &__desc {
    @include tablets {
      text-align: center;
      margin-right: 0;
    }

    opacity: 0.8;
    color: $text-color;
    font-size: 18px;
    font-weight: 600;
    line-height: 30px;
    margin-bottom: 20px;
  }

  &__name {
    @include small {
      font-size: 36px;
      line-height: 50px;
    }

    width: 411px;
    color: #464d62;
    opacity: 0.8;
    font-size: 72px;
    font-weight: 900;
    line-height: 80px;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2), 1px 2px 1px rgba(0, 0, 0, 0.5),
      1px 3px 1px rgba(0, 0, 0, 0.5), 1px 4px 1px rgba(0, 0, 0, 0.5),
      1px 5px 1px rgba(0, 0, 0, 0.5), 1px 6px 1px rgba(0, 0, 0, 0.5),
      1px 7px 1px rgba(0, 0, 0, 0.5), 1px 8px 1px rgba(0, 0, 0, 0.5),
      1px 9px 1px rgba(0, 0, 0, 0.5), 1px 10px 1px rgba(0, 0, 0, 0.5),
      1px 18px 6px rgba(0, 0, 0, 0.7), 1px 22px 10px rgba(16, 16, 16, 0.2),
      1px 25px 35px rgba(16, 16, 16, 0.2), 1px 30px 60px rgba(16, 16, 16, 0.4);
  }
}
