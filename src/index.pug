include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio 
  body
    .wrapper
      main.maincontent
        .welcome-section
          section.fullscreen-section.section-mountains        
            .container
              header.header
                .header__logo
                  .logo ВА
                .header__btns
                  nav.menu
                    - var items = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'];
                    ul.menu__list
                     each item in items
                      li.menu__item
                        a.menu__link #{item}
                .header__links
                 - var icons = ['insta', 'vk', 'github'];
                  ul.socials
                   each item, index in icons
                    li.socials__item(class=`${index === 1 ? 'active' : ''}`)
                      a(href="").socials__link
                        +icon(`${item}`, 'socials__icon')