.skills {
  width: 100%;

  &__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
  }

  &__cell {

    &:nth-child(1) {
      @include iphone {
        margin-right: 0;
        flex-basis: 50%;
      }

      flex-basis: 70%;
      margin-right: 30px;
    }

    &:nth-child(2) {
      @include iphone {
        margin-right: 0;
      }

      flex-basis: 20%;
      margin-right: 30px;
    }


  }
}