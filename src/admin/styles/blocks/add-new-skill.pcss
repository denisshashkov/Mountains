.add-new-skill {
  display: flex;
  flex-grow: 0;
  justify-content: flex-end;

  &__cell {
    @include iphone {
      margin-right: 10px;
    }

    margin-right: 20px;

    &:nth-child(1) {
      @include iphone {
        flex-basis: 100%;
      }

      flex-basis: 45%;
    }

    &:nth-child(2) {
      flex-basis: 20%;
    }

    &:last-child {
      margin-right: 0;
    }
  }

  &.is-blocked {
    opacity: .3;
    filter: grayscale(100%);
    pointer-events: none;
    user-select: none;
  }
}