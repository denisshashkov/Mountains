.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  background-size: cover;
  background-position: center center;

  img {
    max-height: initial;
    height: auto;
  }
}

.avatar--45 {
  width: 45px;
  height: 45px;
}

.avatar--50 {
  width: 50px;
  height: 50px;
}

.avatar--74 {
  width: 74px;
  height: 74px;
}