.social
  ul.social__list
    - var socials = ['linkedin', 'github'];
    each social in socials
      li.social__item
        - var soclink = ''                          
        case social
          when 'linkedin'
            - soclink='//www.linkedin.com/in/denis-shashkov/'
          when 'github'
            - soclink='//github.com/denisshashkov'
        a(href=`${soclink}` target="blank").social__link
          +icon(social, 'social__icons') 