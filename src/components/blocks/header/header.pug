header.header
                 .header__logo
                  .logo ВА
                 .header__btns
                  nav.menu.menu-active
                    - var items = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'];
                    ul.menu__list
                     each item in items
                      li.menu__item
                        a.menu__link #{item}
                 .header__links
                  - var icons = ['insta', 'vk', 'github'];
                   ul.socials
                    each item, index in icons
                     li.socials__item(class=`${index === 1 ? 'active' : ''}`)
                       a(href="#", target="_blank").socials__link
                         +icon(`${item}`, 'socials__icon')
                 
                 button(type="button").close-menu  
                     +icon(`Cross`, 'cross-image') 

                 .header-menu__link
                   .header-menu__link__bars
